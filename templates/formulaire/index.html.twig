<style>
    .fixed{
        position: fixed;
        bottom: 25px;
        right: 81px;
        z-index: 12;
    }

    .card .card-content {
        padding: 24px;
    }

    .input-field {
        position: relative;
        margin-top: 1rem;
        background-color: white;
    }

    .select-wrapper + label {
        color: #3e3838 !important;
        font-size: 1.1rem !important;
        position: absolute;
        top: -37px;
    }
    label.active {
        width: 100%;
        color: #3e3838 !important;
        font-size: 1.3rem !important;
        top: -8px;
    }
    fieldset {
        padding: .35em .75em .625em;
        border-color: black;
    }
    legend {
        display: table;
        max-width: 100%;
        white-space: normal;
        color: black;
        font-weight: bold;
    }

    .cardBlue {
       background-color: #70cdf7;
    }
    .cardBeige {
        background-color: #b7e8ee;
    }


</style>
